<div class = "page-header">
<h1>All Statues</h1>
</div>
<div class = "btn">
<%= link_to "Post a new Status", new_status_path%>
</div>
<% @statuses.each do |status| %>
<div class="status">
<strong><%= status.name %></strong>
<p> <%= status.content %>
  </p>

  <div class = "meta">
    <%= link_to "Show", status %>
    <span class ="admin">
      <%= link_to "Edit", edit_status_path(status) %> |
      <%= link_to "Delete", status, method: :delete, data: { confirm:" Are you sure"} %>
    </span>
  </div>
</div>
<% end %>